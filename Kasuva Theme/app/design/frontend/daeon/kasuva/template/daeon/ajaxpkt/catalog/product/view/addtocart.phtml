<?php $_product = $this->getProduct(); ?>
<?php $buttonTitle = Mage::helper('core')->quoteEscape($this->__('Add to Cart')); ?>
<?php if($_product->isSaleable()): ?>
		<div class="add-to-cart">
			<div class="cart-quantity">
				<?php if(!$_product->isGrouped()): ?>
				<label for="qty" class="qty-lbl"><?php echo $this->__('Qty:') ?></label>
				<div class="qty-wrapper quant-input">
					<div class="arrows">
					  <div class="arrow plus gradient"><span class="ir"><i class="icon fa fa-sort-asc"></i></span></div>
					  <div class="arrow minus gradient"><span class="ir"><i class="icon fa fa-sort-desc"></i></span></div>
					</div>
					<input type="text" pattern="\d*" name="qty" id="qty" maxlength="12" value="<?php echo max($this->getProductDefaultQty() * 1, 1) ?>" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Qty')) ?>" class="input-text qty" />
				</div>
				<?php endif; ?>
			</div>
			<button type="button" title="<?php echo $buttonTitle ?>" class="button btn-cart" onclick="productAddToCartForm.submit(this)"><span><i class="fa fa-shopping-cart fa-rotate-360"></i><span class="title"><?php echo $buttonTitle ?></span></span></button>
			<span id='ajaxpkt-loader' class="product ajaxpkt-loader" style="display:none;">&nbsp;</span>
        <?php echo $this->getChildHtml('', true, true) ?>
		</div>
<?php endif; ?>
