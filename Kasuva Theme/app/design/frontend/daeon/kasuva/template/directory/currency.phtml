/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if($this->getCurrencyCount()>1): ?>
	<li class="dropdown dropdown-small menu-item-has-children">
		<div class="currency-switcher">
			<label class="hide" for="select-currency"><?php echo $this->__('Currency:') ?></label>
			<a class="dropdown-toggle" href="#" data-hover="dropdown" data-toggle="dropdown">
				<span class="value"><?php echo $this->getCurrentCurrencyCode(); ?></span>
				<span class="caret"></span>
			</a>
			<ul id="select-currency" class="dropdown-menu sub-dropdown currency-dropdown animated fadeInUp" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Currency')) ?>">
				<?php foreach ($this->getCurrencies() as $_code => $_name): ?>
				<?php $_selected = ($_code==$this->getCurrentCurrencyCode()) ? 'active' : '' ?>
				<li class="<?php echo $_selected ?>"><a href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>>"><span><?php echo $_code; ?></span></a></li>
				<?php endforeach; ?>
			</ul>
		</div>
	</li>
<?php endif; ?>
