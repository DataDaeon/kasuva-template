<?xml version="1.0"?>
<config>
	<tabs>
        <unicaseexnsions translate="label" module="megamenu">
            <label>Unicase Extensions</label>
            <sort_order>300</sort_order>
        </unicaseexnsions>
    </tabs>
    <sections>
        <perfectus_megamenu translate="label" module="megamenu">
            <label>Megamenu</label>
            <tab>unicaseexnsions</tab>
            <frontend_type>text</frontend_type>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enabled translate="label comment">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
						<web_menu>
							<label>Display Navigation Menu</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</web_menu>
						<mobile_menu>
							<label>Display Mobile Menu</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</mobile_menu>
                        <max_level translate="label comment">
                            <label>Visible menu depth</label>
                            <comment><![CDATA[e.g. 1, 2, 3, 4. Set "0" to disable limits. For example, if you set this value to 2, only second level categories will be displayed]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </max_level>
                        <show_home_link translate="label">
                            <label>Show the "Home" Link</label>
                            <frontend_type>select</frontend_type>
                            <source_model>megamenu/system_config_source_general_homelinkstyle</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_home_link>
                        <display_empty_categories translate="label comment">
                            <label>Display empty categories</label>
                            <comment><![CDATA[An empty category is a category that has no products]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </display_empty_categories>
						<default_menu_type>
							<label>Default Menu Type</label>
                            <comment><![CDATA[Set Default Menu Type.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>megamenu/system_config_source_general_menutype</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</default_menu_type>
						<default_menu_columns>
							<label>Default Menu Columns</label>
                            <comment><![CDATA[Set Default Menu Columns.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>megamenu/system_config_source_general_columns</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</default_menu_columns>
						<navmenu_before_block>
							<label>Nav Menu Before Static Block ID</label>
							<comment><![CDATA[Set Static Block id to display before navigation menu start. Ex. for dislay Before Start Menu Links.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</navmenu_before_block>
						<navmenu_after_block>
							<label>Nav Menu After Static Block ID</label>
							<comment><![CDATA[Set Static Block id to display After navigation menu. Ex. for dislay Menu Links end of Menu.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</navmenu_after_block>
						<sidebar_heading translate="label">
                            <label>Sidebar Menu</label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sidebar_heading>
						<sidebar_enabled translate="label comment">
                            <label>Enable Sidebar Megamenu</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Use below code for display sidebar megamenu.</comment>
                        </sidebar_enabled>
						<showsidebar_home_link translate="label">
                            <label>Show the "Home" Link</label>
                            <frontend_type>select</frontend_type>
                            <source_model>megamenu/system_config_source_general_homelinkstyle</source_model>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </showsidebar_home_link>
						<sidebar_heading_code translate="label">
                            <label><![CDATA[<span style="padding:7px 10px ;background:#ccc;margin:0 0 10px;">{{block type="megamenu/sidebarnav" name="sidebarnav" template="perfectus/megamenu/sidebar.phtml"}}</span>]]></label>
                            <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sidebar_heading_code>
                    </fields>
                </general>
                <category_labels translate="label">
                    <label>Category Labels</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <label_1 translate="label comment">
                            <label>Label 1</label>
                            <comment>Define the text of the category label 1. Labels can be assigned to every category in Catalog > Manage Categories.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </label_1>
                        <label_2 translate="label comment">
                            <label>Label 2</label>
                            <comment>Define the text of the category label 2. Labels can be assigned to every category in Catalog > Manage Categories.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </label_2>
                    </fields>
                </category_labels>
            </groups>
        </perfectus_megamenu>
    </sections>
</config>
